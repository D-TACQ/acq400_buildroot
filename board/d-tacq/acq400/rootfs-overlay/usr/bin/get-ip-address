#!/bin/sh

if [ "x$*" = "x" ]; then
	IPX=$(/sbin/ifconfig | grep inet[^6] | awk '{ print $2 }')
	for IP in $IPX; do
		echo ${IP#*:*}
	done
else
	for ethx in $*; do
		if [ -e /sys/class/net/$ethx ]; then
			IPX=$(/sbin/ifconfig $ethx | grep inet[^6] | awk '{ print $2 }')
			echo ${IPX#*:*}
		else
			exit 1
		fi
	done
fi
exit 0

